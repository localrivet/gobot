# Gobot Environment Variables
# Copy this file to .env and fill in your values

# App Configuration
APP_BASE_URL=http://localhost:5173
APP_DOMAIN=localhost
PRODUCTION_MODE=false
ADMIN_EMAIL=admin@your-domain.com

# Backoffice Admin (for viewing SaaS stats at /backoffice)
# Auto-generated during install - change in production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Authentication - JWT secret for user sessions
# Auto-generated during install (openssl rand -hex 32)
ACCESS_SECRET=your-super-secret-key-change-this-in-production

# Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8888

# ===========================================
# MODE 1: Standalone (SQLite + Direct Stripe)
# ===========================================
# Set LEVEE_ENABLED=false to use local SQLite database
# and direct Stripe integration (no Levee required)

# Database (SQLite - used when LEVEE_ENABLED=false)
SQLITE_PATH=./data/gobot.db

# Stripe (direct integration - used when LEVEE_ENABLED=false)
# See docs/stripe.md for complete setup guide
# Products are defined in etc/gobot.yaml and synced to Stripe on startup
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# Email Configuration (choose ONE option)
# ===========================================

# Option 1: SMTP (works with any email provider)
# Gmail: smtp.gmail.com:587 (use App Password, not your regular password)
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587
# Amazon SES: email-smtp.us-east-1.amazonaws.com:587
# Postmark: smtp.postmarkapp.com:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Gobot
EMAIL_REPLY_TO=support@your-domain.com

# Option 2: Outlet.sh (optional - adds email lists, sequences, templates)
OUTLET_BASE_URL=
OUTLET_API_KEY=

# ===========================================
# MODE 2: With Levee (Full Platform Features)
# ===========================================
# Set LEVEE_ENABLED=true to use Levee for auth, billing, email

# Levee Configuration (get from https://dashboard.levee.sh)
LEVEE_ENABLED=false
LEVEE_API_KEY=lv_your_api_key_here
LEVEE_BASE_URL=https://your-levee-instance.com
LEVEE_GRPC_ADDRESS=llm.your-levee-instance.com:9889

# ===========================================
# OAuth / Social Login (Optional)
# ===========================================
# Enable social login with Google and/or GitHub
# Users can sign in without creating a password

# Master toggle for OAuth
OAUTH_ENABLED=false

# Google OAuth (from https://console.cloud.google.com/apis/credentials)
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (from https://github.com/settings/developers)
GITHUB_OAUTH_ENABLED=false
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# Feature Toggles
# ===========================================
# Enable/disable major features

# Organizations (teams) - allows users to create organizations and invite members
ORGANIZATIONS_ENABLED=true

# In-app notifications - shows notification bell with real-time updates
NOTIFICATIONS_ENABLED=true

# ===========================================
# Production Deployment (deploy/ folder)
# ===========================================

# GitHub Container Registry (for DOSync auto-deploy)
GITHUB_REPOSITORY=your-org/your-app
GITHUB_USERNAME=your-github-username
GITHUB_PAT=ghp_your_personal_access_token
IMAGE_TAG=main-0000000000-0000000
