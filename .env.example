# Gobot Environment Variables
# Copy this file to .env and fill in your values

# App Configuration
APP_BASE_URL=http://localhost:5173
APP_DOMAIN=localhost
PRODUCTION_MODE=false
ADMIN_EMAIL=admin@your-domain.com

# Authentication - JWT secret for user sessions
# Auto-generated during install (openssl rand -hex 32)
ACCESS_SECRET=your-super-secret-key-change-this-in-production

# Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:27895

# ===========================================
# Database
# ===========================================
SQLITE_PATH=./data/gobot.db

# ===========================================
# Email Configuration (SMTP)
# ===========================================
# Gmail: smtp.gmail.com:587 (use App Password, not your regular password)
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587
# Amazon SES: email-smtp.us-east-1.amazonaws.com:587
# Postmark: smtp.postmarkapp.com:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Gobot
EMAIL_REPLY_TO=support@your-domain.com

# ===========================================
# OAuth / Social Login (Optional)
# ===========================================
# Enable social login with Google and/or GitHub
# Users can sign in without creating a password

# Master toggle for OAuth
OAUTH_ENABLED=false

# Google OAuth (from https://console.cloud.google.com/apis/credentials)
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (from https://github.com/settings/developers)
GITHUB_OAUTH_ENABLED=false
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# Feature Toggles
# ===========================================
# Enable/disable major features

# Organizations (teams) - allows users to create organizations and invite members
ORGANIZATIONS_ENABLED=true

# In-app notifications - shows notification bell with real-time updates
NOTIFICATIONS_ENABLED=true

# ===========================================
# AI Providers (for CLI agent)
# ===========================================
# Set your AI provider API keys here
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...
